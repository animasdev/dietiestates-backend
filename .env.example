# Copy this file to `.env` and fill real secrets.
# This file is safe to commit. Do NOT commit `.env`.

# === Application / Compose wiring ===
# Host port for app container
APP_PORT=8080

# Database basics (used by the db container and as defaults for Spring)
DB_NAME=dietiestates25
DB_USER=app
DB_PASSWORD=app
# Host port bound to the Postgres container (host -> container:5432)
DB_PORT_ON_HOST=54322

# Spring datasource (optional overrides). When unset, compose builds the URL as jdbc:postgresql://db:5432/${DB_NAME}
# For running locally without docker-compose, Spring falls back to 127.0.0.1:54322 as defined in application.yml
#SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/dietiestates25
#SPRING_DATASOURCE_USERNAME=app
#SPRING_DATASOURCE_PASSWORD=app
#SPRING_FLYWAY_ENABLED=true
#SPRING_PROFILES_ACTIVE=default
#JAVA_OPTS=-Xms256m -Xmx512m

# === SMTP / Mail ===
MAIL_ENABLED=true
MAIL_HOST=pro.eu.turbo-smtp.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_FROM=noreply@dietiestates.it
MAIL_FROM_NAME=DietiEstates

# === JWT (override for non-default secret) ===
#APP_JWT_SECRET=change_me_to_32+_chars_random

# === Storage (optional overrides) ===
#MEDIA_STORAGE_PUBLICBASEURL=/media
#MEDIA_STORAGE_LOCAL_BASEPATH=/app/storage/media
